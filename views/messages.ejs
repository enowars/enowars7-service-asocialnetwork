<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Messages</title>
    <link rel="stylesheet" href="/style/messages.css">
    <link rel="stylesheet" href="/style/global.css">
    <link rel="stylesheet" href="/style/nav.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
    <body>
    <%- include('navbar') %>
        <main>
            <div class="dropdown show">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Partner
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <% partners.forEach((partner) => {%>
                        <a class="dropdown-item" href='/messages/<%=partner.name%>'><img src="/assets/profile-pics/<%= partner.profilePic %>.jpg" alt="avatar" class="avatar"><%= partner.name %></a>
                    <%});%>
                    <a class="dropdown-item" href="/messages">New Partner</a>
                </div>
            </div>
            <% if(messages){%>
                <div class="message-partner"><%= partner %></div>
                    <div class="message-container">
                <% messages.forEach(message => { %>
                        <div>
                            <% if(message.recipient === partner){%>
                                <div class="message sent">
                                    <%= message.text %>
                                    <%= message.createdAt%></div>
                            <%}else{%>
                                <div class="message received" style="text-align: right">
                                    <%= message.text%>
                                    <%= message.createdAt%></div>
                            <%}%>
                        </div>
                <% }); %>
                    </div>
            <%}%>
            <% if (locals.error) { %>
                <div class="error" style="color: red"> <%= error %> </div>
            <% } %>
            <form method="post" action="/messages">
                <% if (locals.new){%>
                    <label for="recipient">Recipient</label>
                    <input type="text" name="recipient" id="recipient" required><br>
                <% } else { %>
                    <input type="hidden" name="recipient" value="<%= partner %>">
                <% } %>
                <label for="message">Message</label>
                <input type="text" name="message" id="message" class="message-input" required>
                <button type="submit">Send</button>
            </form>
        </main>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    </body>
</html>