<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%=chatroom.name%></title>
    <link rel="stylesheet" href="/style/global.css">
    <link rel="stylesheet" href="/style/chatroom.css">
    <link rel="stylesheet" href="/style/nav.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body onload="getNewMessages()">
    <%- include('navbar') %>
    <main>
        <input type="hidden" id="lastMessageTime" value="<%=lastMessage%>">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1><%=chatroom.name%></h1>
                    <div class="chatroom">
                        <div class="messages">
                            <%chatroom.messages.forEach(function(message){%>
                                <div class="message">
                                    <div class="author">
                                        <img src="<%=message.user.avatar%>" alt="" class="profile-pic">
                                        <span><%=message.user.userName%></span>
                                    </div>
                                    <p><%=message.message%></p>
                                </div>
                            <%})%>
                        </div>
                        <input type="text" name="message" placeholder="Type your message here...">
                        <button type="submit" onclick="submitMessage()">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha384-xBuQ/xzmlsLoJpyjoggmTEz8OWUFM0/RC5BsqQBDX2v5cMvDHcMakNTNrHIW2I5f" crossorigin="anonymous"></script>    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script>
        function submitMessage(){
            let message = $('input[name="message"]').val();
            if(message === '')
                return;
            $.ajax({
                url: window.location.href + '/messages',
                type: 'POST',
                data: {
                    message: message
                },
                success: function(data) {
                    // Clear the input
                    $('input[name="message"]').val('');
                },
                error: function() {
                    // Handle errors
                    window.href = '/login';
                }
            });
        }
        function getNewMessages() {
            $.ajax({
                url: window.location.href + '/messages/' + $('#lastMessageTime').val(),
                type: 'GET',
                success: function(data) {
                    // Display new messages to the user
                    displayNewMessages(data);
                },
                error: function() {
                    // Handle errors
                    window.href = '/login';
                },
                complete: function() {
                    // Call this function again after a short delay
                    setTimeout(getNewMessages, 1000);
                }
            });
        }
        function displayNewMessages(messages) {
            let latestMessageTime = 0;
            // Loop through each message
            messages.forEach(function(message) {
                // Create a div for the message
                var messageDiv = $('<div class="message">');
                // Add the author div as a child of the messageDiv
                messageDiv.append('<div class="author"><img src="' + message.user.avatar + '" alt="" class="profile-pic"><span>' + message.user.userName + '</span></div>');
                // Add the message to the div
                messageDiv.append('<p>' + message.message + '</p>');
                // Add the div to the messages
                $('.messages').append(messageDiv);
                if(new Date(message.date).valueOf() > latestMessageTime) {
                    latestMessageTime = new Date(message.date).valueOf();
                }
            });
            // Update the lastMessageTime
            if(latestMessageTime > 0)
                $('#lastMessageTime').val(latestMessageTime);
        }
    </script>
</body>
</html>
